.controls{
    right: 0;
    top: 70;
    position: fixed;
    z-index: 8;
    margin: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.downloaders{
    right: 0;
    top: 70;
    position: fixed;
    z-index: 8;
    margin: 25px;
    border-radius: 50px 50px 50px 50px;
    height: auto; 
    box-shadow: md-card-1;
    height: auto;
    background: transparent;
    width 65px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.imgIcon{
    height: 25px;
    width: 25px;
}

.downloadPDF{
    color: rgba(0,0,0,0.8);
    // color: Crimson ;
    font-size: 50px;
    cursor: pointer;
    margin-bottom: 10px;
}
.downloadPDF:active{
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
    
}

.downloadJSON{
    font-size: 13px; 
    font-family: 'Arial';
    color: black;
    text-decoration: none;
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
    margin-bottom: 10px;  
}

.downloadPDF, .downloadJSON, .download{
    margin-bottom: 15px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center ;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.8);
    width: 55px;
    height: 55px;
    transition: all 0.2s ease-in-out;
    box-shadow: md-card-2;
}