.controls{
    right: 0;
    bottom: 0;
    position: fixed;
    z-index: 8;
    margin: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    @media (min-width: 600px) {
        top: 70;    
    }
}

.downloaders{
    right: 0;
    top: 70;
    position: fixed;
    z-index: 8;
    margin: 25px;
    border-radius: 50px 50px 50px 50px;
    height: auto; 
    box-shadow: md-card-1;
    height: auto;
    background: transparent;
    width 65px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.imgIcon{
    height: 25px;
    width: 25px;
}

.downloadPDF{
    color: rgba(0,0,0,0.8);
    // color: Crimson ;
    font-size: 50px;
    cursor: pointer;
    margin-bottom: 10px;
}
.downloadPDF:active{
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
    
}

.downloadJSON{
    font-size: 13px; 
    font-family: 'Arial';
    color: black;
    text-decoration: none;
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
    margin-bottom: 10px;  
}

.downloadPDF, .downloadJSON, .download, .css3{
    margin-bottom: 15px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center ;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.8);
    width: 55px;
    height: 55px;
    transition: all 0.2s ease-in-out;
    box-shadow: md-card-2;
}

.css3{
    color: black;
     text-decoration: none;
}

.css3:hover{
    background-color: lightGray;
}
.downloadJSON:hover{
    background-color: lightGray;
}
.downloadPDF:hover{
    background-color: lightGray;
}

.css3DragOver {
    -webkit-animation:rainbow 0.7s infinite;
    -ms-animation:rainbow 0.7s infinite;
    -o-animation:rainbow 0.7s infinite;
    animation:rainbow 0.7s infinite;
}

@-webkit-keyframes rainbow {
0% {color: #ff0000;}
10% {color: #ff8000;}
20% {color: #ffff00;}
30% {color: #80ff00;}
40% {color: #00ff00;}
50% {color: #00ff80;}
60% {color: #00ffff;}
70% {color: #0080ff;}
80% {color: #0000ff;}
90% {color: #8000ff;}
100% {color: #ff0080;}
}
