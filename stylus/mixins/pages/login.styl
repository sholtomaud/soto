.login{
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
    
.loginPage{
    display: flex;
    color: black;
    flex-direction: column;
    align-items: center;
    @media (min-width: 600px) {
      margin-left: 12%;
      margin-right: 12%;
      padding: 66px;
      margin-bottom: 60px;
      margin-top: 20px;
    }
}
  
.loginInfo{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start ;
    padding-bottom: 15px;
    margin-bottom: 10px;
    background: white;
}

.loginInput{
    border: none;
    min-width: 100px;
    font-family: primary-font-family;
    font-size: desktop-text-font-size;
    padding: 10px;
    
    line-height: 16px;
    box-shadow: md-card-1;
}