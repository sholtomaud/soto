.downloadButtons{
    right: 0;
    top: 70;
    position: fixed;
    z-index: 8;
    margin: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.downloadPDF{
    color: rgba(0,0,0,0.8);
    // color: Crimson ;
    font-size: 50px;
    cursor: pointer;
}
.downloadPDF:active{
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;
}

.downloadJSON{
    font-size: 13px; 
    font-family: 'Arial';
    color: black;
    text-decoration: none;
    background-color: rgba(0,0,0,0.8);
    border-radius: 50%;  
}

.downloadPDF, .downloadJSON{
    margin-bottom: 15px;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center ;
    border-radius: 50%;
    background-color: rgba(255,255,255,0.8);
    width: 55px;
    height: 55px;
    transition: all 0.2s ease-in-out;
    box-shadow: md-card-2;
}