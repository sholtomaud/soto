}

.appDetails{
    font-size: 17px;
    text-align: justify;
    padding: 10px;
}

.authorDetails{
    display: flex;
    color: black;
    flex-direction: row;
    position: relative;
    justify-content: space-between;
    align-items: flex-start;
    @media (min-width: 600px) {
      // width: 400px;
      margin-left: auto;
    }
}

.introDetails{
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    font-size: 18px;
    padding-right: 5px;
    margin-bottom: 20px;
}

.introDetailItem{
    padding-top: 1px;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-end;
}

.introDetailKey{
    // font-size: 20px;
    padding-right: 6px;
    text-transform: capitalize;
    font-weight: bold;
    
    // font-family: 'Squada one';
}

.introPhoto > img {
    background: rgba(255,255,255,.99);
    box-shadow: 2px 2px 2px #888;
    width: 120px;
    // border-radius: 50%;
    padding 10px;
    text-align: center;
    border: 10px solid black;
    margin-bottom: 12px;
    
    @media (min-width: 600px) {
        width: auto;
        height: auto;
    }
    
}

