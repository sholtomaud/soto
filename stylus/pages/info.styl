.info{
    padding: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
    
.infoPage{
    display: flex;
    color: black;
    flex-direction: column;
    align-items: center;
    @media (min-width: 600px) {
      margin-left: 12%;
      margin-right: 12%;
      padding: 66px;
      box-shadow: md-card-2;
      margin-bottom: 60px;
      margin-top: 20px;
    }
}
    
.infoTitle{
    margin: 25px 15px;
    
    font-size: mobile-title-font-size;
    @media (min-width: 600px) {
        font-size: desktop-title-font-size;      
    }
    text-align: center;
    text-transform: uppercase;
    // // font-size: 24px;
    // @media (min-width: 600px) {
    //   font-size: 28px;
    // }
}

.infoSectionTitle{
    
    font-size: mobile-section-font-size;
    @media (min-width: 600px) {
        font-size: desktop-section-font-size;       
        padding-top: 25px;
    }
    text-align: left;
    padding-top: 10px;
    text-transform: capitalize;
}


.authorInfo{
    padding-bottom: 15px;
    margin-bottom: 10px;
    background: white;
    // border-bottom: solid 1px lightGray;
    // -webkit-box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.15);
    // -moz-box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.15);
    // box-shadow: 0px 0px 4px 4px rgba(0,0,0,0.15);
}

.appInfo{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-bottom: 15px;
    margin-bottom: 10px;
    background: white;
    // border-bottom: solid 1px lightGray;
    // -webkit-box-shadow: 0px 0px 5px 5px rgba(0,0,0,0.15);
