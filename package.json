{
  "name": "shotlom",
  "version": "1.0.10",
  "description": "Sholto Maud",
  "main": "index.js",
  "scripts": {
    "watch": "watchify scripts/index.js -o ../shotlom.github.io/index.browser.js -d & stylus -u nib -w stylus/index.styl -o ../shotlom.github.io/style.css",
    "build": "browserify -g uglifyify scripts/index.js > ../shotlom.github.io/index.browser.js & stylus -u nib stylus/index.styl -o ../shotlom.github.io/style.css | cssmin & cp -R ./fonts ../shotlom.github.io & cp -R ./img ../shotlom.github.io & cp *.html ../shotlom.github.io",
    "dist": "npm version patch -m \"Bumped to %s\"",
    "postversion": "git push && git push --tags && npm run build"
  },
  "repository": {
    "type": "git"
  },
  "author": "Sholto Maud",
  "license": "BSD-3-Clause",
  "dependencies": {
    "activity-router": "^1.2.0",
    "cpjax": "^1.1.1",
    "crel": "^2.1.8",
    "d3": "^3.5.6",
    "debounce": "^1.0.0",
    "doc-js": "^1.3.1",
    "fastclick": "^1.0.6",
    "fastn": "^2.0.0",
    "jspdf-browserify": "^1.0.272",
    "modal-component": "^1.1.0",
    "resume-schema": "0.0.16",
    "simple-date": "^1.1.1",
    "titlecase": "^1.0.2"
  },
  "devDependencies": {
    "browserify": "^13.0.0",
    "cssmin": "^0.4.3",
    "debug": "^2.2.0",
    "minifyify": "^7.2.1",
    "nib": "^1.1.0",
    "rootify": "^1.1.0",
    "stylus": "^0.52.0",
    "uglifyify": "^3.0.1"
  },
  "browserify": {
    "transform": [
      "rootify"
    ]
  },
  "rootify": {
    "rootPath": "./scripts"
  }
}
